                <a class="nav-link px-3" href="/editService" style="color: white;"><h5>Fr</h5></a>
            </div>
        </div>
    </header>

    <main class="main">
            {{#if message}}
            <p class="alert alert-success">{{message}}</p>
            {{/if}}
            <div class="card">
                <div class="card-header"><b>تعديل البيانات</b></div>
                <div class="card-body">
                    {{#each rows }}
                    <form method="post" action="">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="service">المصلحة</label>
                                    <input type="text" name="service" id="service" class="form-control"
                                        value="{{this.service}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="user">المستخدم</label>
                                    <input type="text" name="user" id="user" class="form-control"
                                        value="{{this.user}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="materiel">العتاد المعلوماتي</label>
                                    <input type="text" name="materiel" id="materiel" class="form-control"
                                        value="{{this.materiel}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="desc_materiel">خصائص العتاد المعلوماتي</label>
                                    <input type="text" name="desc_materiel" id="desc_materiel" class="form-control"
                                        value="{{this.desc_materiel}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="address_ip">عنوان IP</label>
                                    <input type="text" name="address_ip" id="address_ip" class="form-control"
                                        value="{{this.address_ip}}" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="needs">الاحتياجات</label>
                                    <textarea type="text" name="needs" id="needs"
                                        class="form-control">{{this.needs}}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="button">
                        <div class="mb-3">
                            <input type="submit" class="login__submit navlink" aria-current="page" value="تعديل" />
                        </div>
                        <div class="mb-3">
                            <a class="login__submit navlink" aria-current="page" href="/homeAr">رجوع</a>
                        </div>
                    </div>
                    </form>
                    {{/each}}
                </div>
            </div>
    </main>
</body>

</html>